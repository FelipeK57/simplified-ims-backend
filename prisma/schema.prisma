generator client {
  provider = "prisma-client"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model Store {
  id          Int       @id @default(autoincrement())
  name        String

  users       User[]
  products    Product[]
  
  createdAt   DateTime  @default(now())
}

model User {
  id        Int     @id @default(autoincrement())
  name      String
  email     String  @unique
  password  String

  role      String  @default("owner")

  storeId   Int
  store     Store   @relation(fields: [storeId], references: [id])

  createdAt   DateTime  @default(now())
}

model Product {
  id            Int       @id @default(autoincrement())
  name          String
  code          String
  description   String

  price         Float
  cost          Float?

  stock         Int       @default(0)
  isActive      Boolean   @default(true)

  category      String?
  imageUrl      String? 

  storeId       Int
  store         Store     @relation(fields: [storeId], references: [id])
  
  createdAt     DateTime  @default(now())
}
